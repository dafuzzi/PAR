<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.uulm.par.notes.ShowNote" >

    <TextView
        android:id="@+id/note_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/note_title"
        android:layout_below="@+id/note_title"
        android:text="@string/description_info"
        android:textColor="#a8a8a8"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/note_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/note_info"
        android:layout_below="@+id/note_info"
        android:layout_marginTop="25dp"
        android:text="@string/description_message" />

    <TextView
        android:id="@+id/note_created"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/note_message"
        android:layout_below="@+id/note_message"
        android:text="@string/description_created"
        android:textColor="#a8a8a8"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/note_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/description_title"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/note_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/note_message"
        android:layout_alignRight="@+id/note_info"
        android:layout_alignTop="@+id/note_title"
        android:contentDescription="@string/description_icon"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/btn_delete" />

</RelativeLayout>