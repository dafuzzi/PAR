<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.uulm.par.notes.AddTime" >

    <EditText
        android:id="@+id/new_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/btn_ok" />

    <EditText
        android:id="@+id/new_time_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_time_title"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ic_add_time"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <ImageView
        android:id="@+id/ic_add_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/new_time_message"
        android:layout_alignTop="@+id/new_time_title"
        android:contentDescription="@string/description_icon"
        android:src="@drawable/ic_time" />

    <Button
        android:id="@+id/btn_setTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_add"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/btn_add"
        android:text="@string/btn_setTime" />

    <Button
        android:id="@+id/btn_setDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_setTime"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/btn_setTime"
        android:text="@string/btn_setDate" />
    <TextView
        android:id="@+id/lable_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ic_add_time"
        android:layout_alignLeft="@+id/new_time_title"
        android:text="@string/title" />

    <TextView
        android:id="@+id/label_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_time_message"
        android:layout_below="@+id/new_time_title"
        android:text="@string/message" />
    
</RelativeLayout>